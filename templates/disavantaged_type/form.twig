{% extends "layout.twig" %}

{% block body %}
<div class="container">
  <h3>ประเภทผู้ด้อยโอกาศ</h3>
  <form method="post">
    <div class="form-group">
      <label>ชื่อ</label>
      <input type="text" class="form-control" name="name" value="{{ form.name }}">
    </div>
    <div class="form-group">
      <label>เบี้ย</label>
      <input type="text" class="form-control" name="allowance" value="{{ form.allowance }}">
    </div>
    <div>
      <button type="submit" class="btn btn-primary">บันทึก</button>
      <a class="btn btn-warning" href="{{ base_url() }}/disavantaged_type">กลับไปยังรายการ</a>
    </div>
  </form>
</div>
{% endblock %}
