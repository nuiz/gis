{% extends "layout.twig" %}

{% block body %}
<div class="container">
  <h3>กลุ่มอาชีพ</h3>
  <form method="post">
    <div class="form-group">
      <label>ชื่อ</label>
      <input type="text" class="form-control" name="name" value="{{ form.name }}" required>
    </div>
    <div class="form-group">
      <label>รายละเอียด</label>
      <textarea class="form-control" name="description">{{ form.description }}</textarea>
    </div>
    <div class="form-group">
      <label>ชื่อผู้ติดต่อ</label>
      <input type="text" class="form-control" name="contact_firstname" value="{{ form.contact_firstname }}" required>
    </div>
    <div class="form-group">
      <label>นามสกุล</label>
      <input type="text" class="form-control" name="contact_lastname" value="{{ form.contact_lastname }}" required>
    </div>
    <div class="form-group">
      <label>เบอร์โทรศัพท์ผู้ติดต่อ</label>
      <input type="text" class="form-control" name="contact_phone" value="{{ form.contact_phone }}" required>
    </div>
    <div class="form-group">
      <label>ละติจูด</label>
      <input type="text" class="form-control" name="location_lat" value="{{ form.location_lat }}">
    </div>
    <div class="form-group">
      <label>ลองติจูด</label>
      <input type="text" class="form-control" name="location_lng" value="{{ form.location_lng }}">
    </div>
    <div>
      <button type="submit" class="btn btn-primary">บันทึก</button>
      <a class="btn btn-warning" href="{{ base_url() }}/careergroup">กลับไปยังรายการ</a>
    </div>
  </form>
</div>
{% endblock %}
